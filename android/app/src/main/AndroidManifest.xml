<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions existantes -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- ðŸ”— Permissions pour url_launcher -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:label="weather_app"
        android:name="${applicationName}"
        android:icon="@mipmap/launcher_icon">

        <!-- Flutter embedding v2 activity -->
        <activity
            android:name="io.flutter.embedding.android.FlutterActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Theme affichÃ© avant chargement Flutter -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- DÃ©claration de l'entrÃ©e principale de l'application -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Ne pas supprimer : utilisÃ© par Flutter -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- ðŸ”— Configuration url_launcher : Queries pour ouvrir des apps externes -->
    <queries>
        <!-- Intent existant pour PROCESS_TEXT -->
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>

        <!-- ðŸŒ Pour ouvrir des liens web (Google Maps web) -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>

        <!-- ðŸŒ Pour ouvrir des liens http -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="http" />
        </intent>

        <!-- ðŸ—ºï¸ Pour ouvrir Google Maps -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="geo" />
        </intent>

        <!-- ðŸ—ºï¸ Pour ouvrir liens maps:// -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="maps" />
        </intent>

        <!-- ðŸ“± Pour partage via apps -->
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="text/plain" />
        </intent>

        <!-- ðŸ“§ Pour ouvrir email -->
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto" />
        </intent>

        <!-- ðŸ“ž Pour ouvrir tÃ©lÃ©phone -->
        <intent>
            <action android:name="android.intent.action.DIAL" />
            <data android:scheme="tel" />
        </intent>
    </queries>

</manifest>